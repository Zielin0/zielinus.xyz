---
import Badge from "./badge.astro";

const {
    data: {
        title,
        description,
        slug,
        tags,
        updated,
    }
} = Astro.props;
---

<div class="flex flex-col border border-neutral-600 bg-card rounded-md xs:w-lg sm:w-md w-[22rem] p-4">
    <div class="flex flex-row items-end gap-1">
        <h3 class="text-xl text-primary font-bold hover:underline hover:decoration-wavy"><a href={`/blog/${slug}`} target="_self" rel="noopener noreferrer">{title}</a></h3>
        <h5 class="text-xs text-gray-500">read more</h5>
    </div>
    <p class="text-base text-gray-200">{description}</p>
    <div class="flex flex-col gap-1 pt-1">
        <div class="flex flex-row gap-1">
            <p class="text-base text-gray-300">Tags:</p>
            <p class="text-base flex flex-row gap-1">
            {
                tags.map(tag => (
                    <Badge text={tag} />
                ))
            }
            </p>
        </div>
        <div class="flex flex-row gap-1">
            <p class="text-base text-gray-300">Updated:</p>
            <p class="text-base text-gray-400">{updated}</p>
        </div>
    </div>
</div>

